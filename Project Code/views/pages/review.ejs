<div class="col"><%- include ('../partials/message') %></div>
<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<style>
    body {
        background-image: url('https://upload.wikimedia.org/wikipedia/en/thumb/d/d3/Colorado_Buffaloes_logo.svg/1200px-Colorado_Buffaloes_logo.svg.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>
<main>
    <div class="container">
        <form action="/addReview" method="POST">
            <div class="form-group">
                <label for="movieName">Movie Name</label>
                <input type="movieName" class="form-control" id="movieName" aria-describedby="usernameHelp" placeholder="Enter the name of the movie" name="movieName" >
            </div>
            <div class="form-group">
                <label for="review">Review</label>
                <textarea style="height: 100px"  type="review" class="form-control" id="review" name="review"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
    </div>
</main>